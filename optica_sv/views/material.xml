<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
 <!--form basico-->   
<record model="ir.ui.view" id="optica_sv_material_form">
<field name="name">optica_sv_material_form</field>
<field name="model">optica_sv.material</field>
<field name="arch" type="xml">
 <form string="Material">
 <sheet>
 <group>
 <field name="name" placeholder="Nombre"/>
 <field name="code" placeholder="Codigo"/>
 </group>
 </sheet>
 </form>
 </field>
 </record>

  <!--view tree-->   
<record model="ir.ui.view" id="optica_sv_material_tree">
<field name="name">optica_sv_material_tree</field>
<field name="model">optica_sv.material</field>
<field name="arch" type="xml">
<tree>
 <field name="name" placeholder="Nombre"/>
 <field name="code" placeholder="Codigo"/>
 </tree>
 </field>
 </record>

<!--Menu-->
<!--Action-->
        <record model="ir.actions.act_window" id="material_list_action">
            <field name="name">Creacion de material </field>
            <field name="res_model">optica_sv.material</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear Material
                </p>
            </field>
        </record>

   <menuitem 
   id="material_menu" 
   parent="menu_sub"
   name="material"
   action="material_list_action"
   sequence="4"
   /> 
 </data>
</odoo>
