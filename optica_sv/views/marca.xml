<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
 <!--form basico-->   
<record model="ir.ui.view" id="optica_sv_marca_form">
<field name="name">optica_sv_marca_form</field>
<field name="model">optica_sv.marca</field>
<field name="arch" type="xml">
 <form string="Marca">
 <sheet>
 <group>
 <field name="name" placeholder="Nombre"/>
 <field name="code" placeholder="Codigo"/>
 </group>
 </sheet>
 </form>
 </field>
 </record>

  <!--view tree-->   
<record model="ir.ui.view" id="optica_sv_marca_tree">
<field name="name">optica_sv_marca_tree</field>
<field name="model">optica_sv.marca</field>
<field name="arch" type="xml">
<tree>
 <field name="name" placeholder="Nombre"/>
 <field name="code" placeholder="Codigo"/>
 </tree>
 </field>
 </record>

<!--Menu-->

 <menuitem id="main_menu" name="Optica SV"/>
<menuitem id="menu_sub" name="Menu"
                  parent="main_menu"/> 

<!--Action-->
        <record model="ir.actions.act_window" id="marca_list_action">
            <field name="name">Creacion de marca </field>
            <field name="res_model">optica_sv.marca</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear Marca
                </p>
            </field>
        </record>

   <menuitem 
   id="marca_menu" 
   parent="menu_sub"
   name="Marca"
   action="marca_list_action"
   sequence="1"
   /> 

 </data>
</odoo>
