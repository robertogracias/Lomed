<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_bundle_product_form_view" model="ir.ui.view">
            <field name="name">product.product.pack</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']/div[@name='options']" position="inside">
                    <div>
                    <field name="is_pack"/>  
                    <label for="is_pack"/> 
                </div>
                </xpath>
                <field name="list_price" position="replace">
                    <field name="list_price" widget='monetary' 
                        attrs= "{'readonly':[('cal_pack_price','=', True)]}"
                        options="{'currency_field': 'currency_id'}"
                     />
                </field>
                <group name="group_standard_price" position="inside">
                                        <field name="cal_pack_price" attrs= "{'invisible':[('is_pack','=', False)]}"/>
                                    </group>
                <xpath expr="//page[@name='inventory']" position="after">
                    <page string='Pack Products' attrs= "{'invisible':[('is_pack','!=', True)]}">
                        <field name="pack_ids">
                            <tree string="Pack Products" editable="bottom">
                                <control>
                                    <create string="Add a product"/>
                                </control>
                                <field name="product_id"/>
                                <field name="qty_uom"/>
                                <field name="bi_image" class="oe_avatar"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
    
        <record id="product_template_inherit_form" model="ir.ui.view">
            <field name="name">product.product.pack</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='variants']" position="attributes">
                  <attribute name="attrs">{'invisible':[('is_pack','=', True)]}</attribute> 
                </xpath>

                <xpath expr="//notebook/page[@name='variants']" position="after">
                  <page string="Variants" name="bi_variants" attrs="{'invisible':[('is_pack','=', False)]}">
                    <h1> You cannot create variants of the Pack </h1>
                  </page>
                </xpath>
            </field>
        </record>
        
        <record id="sale_order_opticasv_form" model="ir.ui.view">
            <field name="name">sale order opticasv</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]/field[@name='price_unit']" position="attributes">
    <attribute name="attrs">{}</attribute>
  </xpath>
  <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
    <page name="studio_page_DCXMz" string="Orden de Trabajo">
      <group name="studio_group_DCXMz">
        <group name="studio_group_DCXMz_right" string="Ojo Derecho">
          <field name="od_esfera"/>
          <field name="od_cilindro"/>
          <field name="od_eje"/>
          <field name="od_prisma"/>
          <field name="od_adicion"/>
        </group>
        <group name="studio_group_DCXMz_left" string="Ojo Izquierdo">
          <field name="oi_esfera"/>
          <field name="oi_cilindro"/>
          <field name="oi_eje"/>
          <field name="oi_prisma"/>
          <field name="oi_adicion"/>
        </group>
      </group>
      <group name="studio_group_VVIIp">
        <group name="studio_group_VVIIp_left">
          <field name="material"/>
          <field name="antireflejo"/>
          <field name="color"/>
          <field name="tipo_aro"/>
          <field name="tipo_lente"/>
          <field name="tipo_lente_bifocal" attrs="{&quot;invisible&quot;: [[&quot;tipo_lente&quot;,&quot;!=&quot;,&quot;Bifocal&quot;]]}"/>
          <field name="tipo_lente_multifocal" attrs="{&quot;invisible&quot;: [[&quot;tipo_lente&quot;,&quot;!=&quot;,&quot;Multifocal&quot;]]}"/>
          <field name="tipo_lente_sencilla" attrs="{&quot;invisible&quot;: [[&quot;tipo_lente&quot;,&quot;!=&quot;,&quot;Sencilla&quot;]]}"/>
        </group>
        <group name="studio_group_VVIIp_right"/>
      </group>
      <group name="studio_group_SEmr0">
        <group name="studio_group_SEmr0_right" string="Ojo Derecho">
          <field name="od_oblea" attrs="{&quot;invisible&quot;: [[&quot;tipo_lente&quot;,&quot;!=&quot;,&quot;Bifocal&quot;]]}"/>
          <field name="od_pupilar"/>
          <field name="od_nasopupilar_lejos" attrs="{}"/>
          <field name="od_nasopupilar_cerca"/>
          <field name="od_nasopupilar" string="OD. Distancia Nasopupilar" attrs="{}" invisible="1"/>
        </group>
        <group name="studio_group_SEmr0_left" string="Ojo Izquierdo">
          <field name="oi_oblea" attrs="{&quot;invisible&quot;: [[&quot;tipo_lente&quot;,&quot;!=&quot;,&quot;Bifocal&quot;]]}"/>
          <field name="oi_pupilar" attrs="{}"/>
          <field name="oi_nasopupilar_cerca"/>
          <field name="oi_nasopupilar_lejos"/>
          <field name="oi_nasopupilar" string="OI. Distancia Nasopupilar" attrs="{}" invisible="1"/>
        </group>
      </group>
      <group name="studio_group_4b2TC">
        <group name="studio_group_4b2TC_left">
          <field name="x_examino"/>
          <field name="x_studio_fecha_de_entrega" string="Fecha de entrega"/>
          <field name="x_asesor_visual"/>
          <field name="x_observaciones"/>
        </group>
        <group name="studio_group_4b2TC_right">
          <field name="medida_a"/>
          <field name="medida_b"/>
          <field name="medida_c"/>
          <field name="medida_d"/>
        </group>
      </group>
    </page>
  </xpath>
                
                
                
                
                
            </field>
        </record>

     <record id="product_bundle_product_search_view" model="ir.ui.view">
            <field name="name">product.template.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view" />
            <field name="arch" type="xml">
                <xpath expr="//search/filter[@name='filter_to_sell']" position="after">
                    <filter string="Is a pack" name="is_a_pack"  domain="[('is_pack','=',1)]"/>
                </xpath>  
        </field>
    </record>

        <record id="action_pack" model="ir.actions.act_window">
            <field name="name">Product Packs</field>
            <field name="res_model">product.template</field>
            <field name="domain">[('is_pack', '=', True)]</field>
            <field name="context">{'default_is_pack':True}</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record id="product_bundle_inherit_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']" position="before">
                      <button name="product_bundle_pack.bi_act_product_bundle_wizard" string="Add Bundle" type="action" attrs= "{'invisible':[('state','=', 'manual')]}" />
                </xpath>
            </field>
        </record>
        
        <menuitem id="menu_product_pack_main" name="Product Pack" parent="sale.product_menu_catalog" sequence="15" action="action_pack"/>
  </data>   
</odoo>

