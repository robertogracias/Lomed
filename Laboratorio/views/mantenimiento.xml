       <!--form basico para prueba-->   
       <record model="ir.ui.view" id="lomed_form_lentes ">
        <field name="name">lomed_form_lentes</field>
        <field name="model">lomed.opticalentes</field>
        <field name="arch" type="xml">
         <form string="LOMED laboratorio optico Lentes">   
        <sheet>      
        <group>  
        <field name="name" />
        <field name="tipo_id" />
        <field name="material_id" domain="[['tipo_id','=', tipo_id]]"/>
        <field name="color_id"  domain="[['material_id','=', material_id]]" />
        <field name="lente_id"  domain="[['color_id','=', color_id]]" />
        <field name="producto_id" />
        <field name="des" />
        </group> 
        </sheet>
        </form>
        </field>
        </record>


