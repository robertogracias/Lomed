        <!--form basico para prueba-->   
 <record model="ir.ui.view" id="lomed_form_tipo">
    <field name="name">lomed_form_tipo</field>
    <field name="model">lomed.opticatipo</field>
    <field name="arch" type="xml">
     <form string="LOMED laboratorio optico TIPO">   
    <sheet>      
    <group>  
    <field name="name" />
    </group> 
    </sheet>
    </form>
    </field>
    </record>

      <!--view tree para nivel-->   
<record model="ir.ui.view" id="lomed_tipo_tree">
    <field name="name">lomed_tipo_tree</field>
    <field name="model">lomed.opticatipo</field>
    <field name="arch" type="xml">
    <tree>
     <field name="name" placeholder="Nombre"/>
     </tree>
     </field>
     </record>


<!--Action para nivel-->
<record model="ir.actions.act_window" id="lomed_tipo_action">
    <field name="name">Creacion de tipo </field>
    <field name="res_model">lomed.opticatipo</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="oe_view_nocontent_create">Crear Tipo
        </p>
    </field>
</record>

<menuitem 
id="tipo_menu" 
