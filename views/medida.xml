<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
 <!--form basico-->   
<record model="ir.ui.view" id="optica_sv_medida_form">
<field name="name">optica_sv_medida_form</field>
<field name="model">optica_sv.medida</field>
<field name="arch" type="xml">
 <form string="Medida">
 <sheet>
 <group>
 <field name="name" placeholder="Nombre"/>
 <field name="code" placeholder="Codigo"/>
 </group>
 </sheet>
 </form>
 </field>
 </record>

  <!--view tree-->   
<record model="ir.ui.view" id="optica_sv_medida_tree">
<field name="name">optica_sv_medida_tree</field>
<field name="model">optica_sv.medida</field>
<field name="arch" type="xml">
<tree>
 <field name="name" placeholder="Nombre"/>
 <field name="code" placeholder="Codigo"/>
 </tree>
 </field>
 </record>

<!--Menu-->

<!--Action-->
        <record model="ir.actions.act_window" id="medida_list_action">
            <field name="name">Creacion de medida </field>
            <field name="res_model">optica_sv.medida</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Crear Medida
                </p>
            </field>
        </record>

   <menuitem 
   id="medida_menu" 
   parent="menu_sub"
   name="medida"
   action="medida_list_action"
   sequence="5"
   /> 
 </data>
</odoo>
